#hero
  height: 450px
  width: 100%
  background: url('/img/hero_bg.jpg')
  background-size: cover
  text-align: center
  h1
    position: relative
    font-size: 20px
    text-transform: uppercase
    color: rgba(0, 0, 0, 0.78)
    opacity(0.6)
    top: 5%
    @extend .bold
  .text_wrap
    width: 400px;
    background: rgba(83, 139, 130, 0.71)
    height: 50%;
    display: inline-block
    position: relative
    top: 90px
    h4
      color: #FFF;
      font-size: 29px;
      margin-top: 80px
      text-transform: uppercase;
      @extend .xlight
      font-weight: normal